{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://api.teller.io/*"
        }
      ]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "curl",
          "args": true,
          "sidecar": true
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-app-write",
      "allow": [{ "path": "$APPDATA/*" }]
    }
  ]
}